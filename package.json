{
  "name": "@donkeyclip/motorcortex-graphs",
  "version": "1.5.3",
  "description": "A plugin for creating graphs using MotorCortex",
  "main": "dist/motorcortex-graphs.cjs.js",
  "module": "dist/motorcortex-graphs.esm.js",
  "browser": "dist/motorcortex-graphs.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/motorcortex-graphs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  --allow-empty-input \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "eslint -c .eslintrc src/**/*.js",
    "lint": "npm run concurrently \"npm:lint:js\" \"npm:lint:styles\"",
    "lint:fix": "npm run concurrently  \"npm:lint:js -- --fix\" \"npm:lint:styles -- --fix\"",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --mode=development --config ./demo/webpack.config.js",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write",
      "stylelint  \"src/**.css\" --config .stylelintrc.json --fix"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "browserify": "^17.0.0",
    "jss": "^10.8.0"
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": "^7",
    "@donkeyclip/motorcortex-2dcam": ">= 0.0.15 < 1",
    "@donkeyclip/motorcortex-anime": ">= 2.1.16 < 3",
    "@donkeyclip/motorcortex-counter": ">= 1.1.0 < 2",
    "@donkeyclip/motorcortex-svgdraw": ">= 0.0.9 < 1"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@babel/plugin-syntax-jsx": "7.14.5",
    "@babel/plugin-transform-react-jsx": "7.14.9",
    "@babel/preset-env": "7.15.8",
    "@donkeyclip/motorcortex": "7.5.4",
    "@donkeyclip/motorcortex-2dcam": "0.0.16",
    "@donkeyclip/motorcortex-anime": "2.1.16",
    "@donkeyclip/motorcortex-counter": "1.1.1",
    "@donkeyclip/motorcortex-player": "2.2.3",
    "@donkeyclip/motorcortex-svgdraw": "0.0.10",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.5",
    "@semantic-release/changelog": "6.0.0",
    "@semantic-release/git": "10.0.0",
    "@semantic-release/github": "8.0.1",
    "@semantic-release/npm": "8.0.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "concurrently": "6.3.0",
    "css-loader": "6.3.0",
    "es6-promise": "4.2.8",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "exports-loader": "3.0.0",
    "husky": "7.0.2",
    "imports-loader": "3.0.0",
    "npx": "10.2.2",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "rollup": "2.58.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "18.0.0",
    "shelljs": "0.8.4",
    "webpack": "5.58.1",
    "webpack-cli": "4.9.0",
    "webpack-dev-server": "4.3.1",
    "whatwg-fetch": "3.6.2"
  }
}
